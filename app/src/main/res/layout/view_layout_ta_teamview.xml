<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-8dp"
        android:gravity="center">

        <atlas.com.trainerapp.widgets.TAHexagonView
            android:id="@+id/slot_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:rotation="90"
            app:hexColorString="grey" />

        <atlas.com.trainerapp.widgets.TAImageView
            android:id="@+id/iv_logo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/logo" />

        <atlas.com.trainerapp.widgets.TAHexagonView
            android:id="@+id/slot_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:rotation="90"
            app:hexColorString="grey" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <atlas.com.trainerapp.widgets.TAHexagonView
            android:id="@+id/slot_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:rotation="90"
            app:hexColorString="grey" />

        <atlas.com.trainerapp.widgets.TAHexagonView
            android:id="@+id/slot_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:rotation="90"
            app:hexColorString="grey" />

        <atlas.com.trainerapp.widgets.TAHexagonView
            android:id="@+id/slot_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:rotation="90"
            app:hexColorString="grey" />

        <atlas.com.trainerapp.widgets.TAHexagonView
            android:id="@+id/slot_6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:rotation="90"
            app:hexColorString="grey" />
    </LinearLayout>

</LinearLayout>